{
	"singleQuote": true,
	"trailingComma": "es5",
	"bracketSpacing": true,
	"printWidth": 80,
	"semi": true,
	"tabWidth": 2,
	"useTabs": true,
	"jsxSingleQuote": true,
	"plugins": ["@trivago/prettier-plugin-sort-imports"],
	"importOrder": [
		"^(next/(.*)$)|^(next$)",
		"^(react/(.*)$)|^(react$)",
		"<THIRD_PARTY_MODULES>",
		"^components/(.*)$|^components/(.*)$",
		"^lib/(.*)$",
		"^utils/(.*)$",
		"^constants/(.*)$",
		"^data/(.*)$",
		"^styles/(.*)$",
		"^[./]"
	],
	"importOrderSeparation": true,
	"importOrderSortSpecifiers": true,
	"importOrderGroupNamespaceSpecifiers": true
}
