{
  "$schema": "https://turbo.build/schema.json",
  "globalDotEnv": [".env"],
  "pipeline": {
    "build": {
      "dependsOn": ["format", "^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "check-types": {},
    "format": {
      "cache": false,
      "outputs": ["**/*.{js,jsx,ts,tsx}", "!**/node_modules/**"]
    },
    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    },
    "migrate": {
      "cache": false
    },
    "deploy": {
      "cache": false
    },
    "typecheck": {
      "dependsOn": ["build"],
      "outputs": [],
      "cache": true
    }
  }
}
