    "@manypkg/cli": "^0.20.0",
    "@prisma/client": "^4.14.0",
    "@trivago/prettier-plugin-sort-imports": "^4.2.0",
    "@types/node": "^18.15.13",
    "@types/prettier": "^2.7.3",
    "autoprefixer": "^10.4.15",
    "dotenv-cli": "^7.2.1",
    "eslint": "^8.48.0",
    "prettier": "^3.0.3",
    "prettier-plugin-tailwindcss": "^0.3.0",
    "pretty-quick": "^3.1.3",
