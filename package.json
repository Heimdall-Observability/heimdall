{
  "name": "@heimdall/root",
  "packageManager": "pnpm@8.6.10",
  "private": true,
  "author": {
    "name": "Francis Masha",
    "email": "francismasha96@gmail.com"
  },
  "scripts": {
    "build": "turbo --filter \"./packages/*\" build",
    "build:tracker": "turbo --filter tracker",
    "build:api": "turbo --filter api build",
    "build:web": "turbo --filter web build",
    "dev:tracker": "turbo --filter \"./packages/*\" dev",
    "dev": "turbo run dev --concurrency 12",
    "lint": "turbo run lint",
    "format:write": "prettier --write \"**/*.{css,js,json,jsx,ts,tsx}\"",
    "format": "prettier \"**/*.{css,js,json,jsx,ts,tsx}\"",
    "clean": "turbo run clean && rm -rf node_modules",
    "ui:add": "pnpm --filter web ui:add",
    "typecheck": "turbo typecheck",
    "deploy:api": "turbo --filter api deploy",
    "migrate": "turbo --filter db migrate",
    "migrate:clickhouse": "turbo --filter api setup:clickhouse",
    "studio": "pnpm --filter db studio"
  },
  "pnpm": {
    "overrides": {
      "@opentelemetry/api": "1.4.1",
      "@opentelemetry/core": "1.13.0",
      "@opentelemetry/exporter-trace-otlp-grpc": "0.39.1",
      "@opentelemetry/resources": "1.13.0",
      "@opentelemetry/sdk-trace-base": "1.13.0",
      "@opentelemetry/sdk-trace-node": "1.13.0",
      "@opentelemetry/semantic-conventions": "1.13.0"
    }
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.2",
    "@commitlint/config-conventional": "^17.7.0",
    "@heimdall/tsconfig": "workspace:*",
    "@manypkg/cli": "^0.21.0",
    "@prisma/client": "^5.2.0",
    "@trivago/prettier-plugin-sort-imports": "^4.2.0",
    "@types/node": "^20.5.9",
    "@types/prettier": "^2.7.3",
    "dotenv-cli": "^7.3.0",
    "eslint": "^8.48.0",
    "prettier": "^3.0.3",
    "prettier-plugin-tailwindcss": "^0.5.4",
    "pretty-quick": "^3.1.3",
    "tailwindcss": "^3.3.3",
    "tsup": "^7.2.0",
    "turbo": "latest",
    "tsx": "^3.12.8",
    "typescript": "^5.2.2",
    "vitest": "^0.34.3"
  }
}
