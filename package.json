{
	"name": "@heimdall/root",
	"packageManager": "pnpm@8.6.10",
	"private": true,
	"author": {
		"name": "Francis Masha",
		"email": "francismasha96@gmail.com"
	},
	"prisma": {
		"schema": "apps/web/prisma/schema.prisma",
		"seed": "tsx apps/web/prisma/seed.ts"
	},
	"scripts": {
		"build": "turbo run build",
		"build:tracker": "turbo --filter tracker",
		"build:api": "turbo --filter api build",
		"build:web": "turbo --filter web build",
		"dev:tracker": "turbo --filter \"./packages/*\" dev",
		"dev": "turbo run dev",
		"lint": "turbo run lint",
		"format:write": "prettier --write \"**/*.{css,js,json,jsx,ts,tsx}\"",
		"format": "prettier \"**/*.{css,js,json,jsx,ts,tsx}\"",
		"clean": "turbo run clean && rm -rf node_modules",
		"ui:add": "pnpm --filter ui ui:add",
		"typecheck": "turbo typecheck",
		"deploy:api": "turbo --filter api deploy",
		"migrate": "turbo --filter db migrate",
		"migrate:clickhouse": "turbo --filter api setup:clickhouse"
	},
	"devDependencies": {
		"@changesets/changelog-github": "^0.4.8",
		"@changesets/cli": "^2.26.1",
		"@commitlint/config-conventional": "^17.6.6",
		"@heimdall/tsconfig": "workspace:*",
		"@manypkg/cli": "^0.20.0",
		"@prisma/client": "^4.14.0",
		"@trivago/prettier-plugin-sort-imports": "^4.2.0",
		"@types/node": "^18.15.13",
		"@types/prettier": "^2.7.3",
		"dotenv-cli": "^7.2.1",
		"eslint": "^8.48.0",
		"prettier": "^3.0.3",
		"prettier-plugin-tailwindcss": "^0.3.0",
		"pretty-quick": "^3.1.3",
		"tailwindcss": "^3.3.3",
		"tsup": "^6.7.0",
		"turbo": "latest",
		"tsx": "^3.7.1",
		"typescript": "^5.1.6",
		"vitest": "^0.31.0"
	}
}
